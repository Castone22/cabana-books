<h5>Book Listing</h4>
<hr/>
<div class="row">
  <table class="u-full-width">
    <thead>
      <tr>
        <th width="20%">Title</th>
        <th width="70%">Summary</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.summary %></td>
        <td><%= link_to 'Show', book_path(book) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <hr/>
</div>