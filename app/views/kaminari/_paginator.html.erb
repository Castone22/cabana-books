<%# The container tag
  - available local variables
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
    paginator:     the paginator that renders the pagination tags inside
-%>
<%= paginator.render do -%>
  <div class="row">
    <ul class="pagination center-align" aria-label="pager">
      <li><%= first_page_tag unless current_page.first? %></li>
      <li><%= prev_page_tag unless current_page.first? %></li>
      <% each_page do |page| -%>
        <% if page.display_tag? -%>
        <%= page_tag page %>
        <% end -%>
      <% end -%>
      <% unless current_page.out_of_range? %>
      <li><%= next_page_tag unless current_page.last? %></li>
      <li><%= last_page_tag unless current_page.last? %></li>
      <% end %>
    </ul>
  </div>
<% end -%>
