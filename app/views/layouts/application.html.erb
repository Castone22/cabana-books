<!DOCTYPE html>
<html>
  <head>
    <title>CabanaBooks</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  </head>

  <body>

    <nav class="navbar-fixed">
      <div class="nav-wrapper container">
        <a class="brand-logo", href="/" id="logo-container">Cabana</a>
        <ul class="navbar-list right">
          <li class="navbar-item">
          <%= link_to 'Home', {controller: 'welcome'}, class: 'navbar-link' %>
          </li>
          <li class="navbar-item">
          <%= link_to 'Books', {controller: 'books'}, class: 'navbar-link' %>
          </li>
          <li class="navbar-item">
          <%= link_to 'About', {controller: 'about'}, class: 'navbar-link' %>
          </li>
        </ul>
      </div>
    </nav>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
